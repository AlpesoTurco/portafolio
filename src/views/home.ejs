  <!-- JS: IntersectionObserver + men煤 m贸vil -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Animaciones por scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.2 });

      document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

      // Men煤 m贸vil
      const btn = document.getElementById('menuBtn');
      const overlay = document.getElementById('menuOverlay');
      const closeBtn = document.getElementById('menuClose');

      const openMenu = () => {
        overlay.classList.remove('hidden');
        document.body.classList.add('menu-open');
        btn?.setAttribute('aria-expanded', 'true');
      };

      const closeMenu = () => {
        overlay.classList.add('hidden');
        document.body.classList.remove('menu-open');
        btn?.setAttribute('aria-expanded', 'false');
      };

      btn?.addEventListener('click', openMenu);
      closeBtn?.addEventListener('click', closeMenu);

      overlay?.addEventListener('click', (e) => {
        if (e.target && e.target.dataset && e.target.dataset.close) closeMenu();
      });

      // Cierra el men煤 cuando tocas un link del drawer
      overlay?.querySelectorAll('a[href^="#"]').forEach(a => {
        a.addEventListener('click', closeMenu);
      });

      // Cierra con ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !overlay.classList.contains('hidden')) closeMenu();
      });
    });
  </script>

